<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:id="@+id/textView"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="127dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密    码："
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_username"
        android:layout_marginTop="113dp"
        android:layout_marginLeft="50dp"
        android:hint="用户名"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_pass"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:hint="密码"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/login"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/ed_pass"
        android:layout_alignRight="@+id/ed_pass"
        android:layout_alignEnd="@+id/ed_pass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/zhuce"
        android:layout_alignTop="@+id/login"
        android:layout_alignLeft="@+id/ed_pass"
        android:layout_alignStart="@+id/ed_pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/showResult"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/zhuce"
        android:layout_alignStart="@+id/zhuce"
        android:layout_marginTop="57dp" />
</RelativeLayout>
